{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "allowJs": true,
        "noImplicitAny": true
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules", "dist", "coverage", "config", "bruno", "logs"]
}
